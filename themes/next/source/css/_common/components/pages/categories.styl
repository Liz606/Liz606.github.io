

.category-all-page {
  .category-all-title { text-align: center; }

  .category-all { margin-top: 20px; }

  .category-list {
    margin: 0;
    padding: 0;
    list-style: none;
    background-position: center;
    background-size: cover;
    &:after{
        content:"";
        clear:both;
        display: table;
    }
  }
@media(max-width: 768px){
   .category-list-item {
      width:50%;
   }
}
@media(min-width: 768px){
   .category-list-item {
      width:33.3%;
   }
}
  .category-list-item { 
    float: left;
    text-align: center;
    min-height: 100px;
    line-height: 100px;
    font-size: 20px;
   
    &:hover{
      background:rgba(0,0,0,.3)
      a,span{
        color:#fff;
      }
    }
  }
 
  .category-list-count {
    color: $grey;
    &:before {
      display: inline;
      content: " ("
    }
    &:after {
      display: inline;
      content: ") "
    }
  }

  .category-list-child { padding-left: 10px; }
}

